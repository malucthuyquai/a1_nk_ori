<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_content_background"
    android:layout_width="@dimen/mail_content_widget_width"
    android:layout_height="@dimen/mail_content_widget_height" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/mail_content_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/mail_content_widget_indicator_margin_top"
            android:src="@drawable/chat_message_left_indicator" />

        <RelativeLayout
            android:layout_width="@dimen/mail_content_widget_image_container_width"
            android:layout_height="@dimen/mail_content_widget_image_container_height"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mail_content_indicator"
            android:background="@drawable/chat_message_left" >

            <ImageView
                android:id="@+id/mail_content_image"
                android:layout_width="@dimen/mail_content_widget_image_width"
                android:layout_height="@dimen/mail_content_widget_image_height"
                android:layout_marginLeft="@dimen/mail_content_widget_image_margin_left"
                android:layout_marginTop="@dimen/mail_content_widget_image_margin_top" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/marker_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />
    </RelativeLayout>

</RelativeLayout>