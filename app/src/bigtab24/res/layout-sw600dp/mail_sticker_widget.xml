<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_sticker_widget_background"
    android:layout_width="@dimen/mail_sticker_widget_width"
    android:layout_height="@dimen/mail_sticker_widget_height" >

    <ImageView
        android:id="@+id/mail_sticker_top_image"
        android:layout_width="@dimen/mail_sticker_widget_content_image_size"
        android:layout_height="@dimen/mail_sticker_widget_content_image_size"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/mail_sticker_widget_image_margin_top"
        android:layout_centerHorizontal="true" 
        android:scaleType="centerInside"/>
    
    <ImageView
        android:id="@+id/mail_sticker_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/mail_sticker_divider_horizontal"
        />
    
    <ImageView
        android:id="@+id/mail_sticker_vertical_divider"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/mail_sticker_divider_vertical"
        />
    
    <ImageView
        android:id="@+id/mail_sticker_bottom_image"
        android:layout_width="@dimen/mail_sticker_widget_content_image_size"
        android:layout_height="@dimen/mail_sticker_widget_content_image_size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mail_sticker_widget_image_margin_top"
        android:layout_centerHorizontal="true" 
        android:scaleType="centerInside"/>

</RelativeLayout>