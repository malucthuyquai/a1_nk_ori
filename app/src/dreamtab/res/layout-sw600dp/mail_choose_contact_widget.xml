<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_choose_widget_container"
    android:layout_width="@dimen/mail_choose_contact_widget_container_width"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/contact_avatar"
        android:layout_width="@dimen/mail_choose_contact_widget_avatar_size"
        android:layout_height="@dimen/mail_choose_contact_widget_avatar_size"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chat_avatar_default" />

    <ImageView
        android:id="@+id/contact_avatar_choose_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/mail_choose_contact_widget_indicator_margin_right"
        android:layout_marginTop="@dimen/mail_choose_contact_widget_indicator_margin_top"
        android:src="@drawable/mail_contact_choose_indicator"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/contact_name"
        style="@style/mail_primary_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_avatar"
        android:layout_marginTop="@dimen/mail_choose_contact_widget_name_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="true" />

</RelativeLayout>