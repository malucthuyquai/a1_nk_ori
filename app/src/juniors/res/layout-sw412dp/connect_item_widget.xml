<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/connect_item_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/connect_garybg"
    android:paddingBottom="24dp"
    android:paddingTop="24dp" >

    <ImageView
        android:id="@+id/connect_item_main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/connect_imgv_chat" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/connect_item_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/connect_item_main_image" >

        <Button
            android:id="@+id/connect_item_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/connect_btn_item_widget" >
        </Button>

        <TextView
            android:id="@+id/connect_item_text"
            style="@style/connect_primary_xl_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:fontFamily="sans-serif-light" >
        </TextView>

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp" >

            <ImageView
                android:id="@+id/connect_item_sub_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="18dp"
                android:contentDescription="@string/empty"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:src="@drawable/connect_icon_chat" >
            </ImageView>

            <RelativeLayout
                android:id="@+id/mail_inbox_unread_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|right"
                android:background="@drawable/connect_notify_bg"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/mail_unread_number"
                    style="@style/connect_primary_s"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textStyle="bold" >
                </TextView>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>