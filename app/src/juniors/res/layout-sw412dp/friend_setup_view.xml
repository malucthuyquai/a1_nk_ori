<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mail_setup_bg"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <TextView
        android:id="@+id/friend_setup_step1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="423px"
        android:layout_marginTop="30px"
        android:text="@string/friend_step_1"
        android:textColor="@android:color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/friend_setup_create_name_text"
        style="@style/friend_primary_l_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_setup_step1_text"
        android:layout_marginLeft="423px"
        android:layout_marginTop="8dp"
        android:text="@string/friend_create_username" />

    <RelativeLayout
        android:id="@+id/friend_setup_next_btn"
        android:layout_width="@dimen/friend_setup_next_width"
        android:layout_height="@dimen/friend_setup_next_height"
        android:layout_alignLeft="@+id/friend_setup_create_name_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:clickable="true" >

        <View
            android:id="@+id/v_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/friend_setup_next_height_half"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_signup_next_top" >
        </View>

        <View
            android:id="@+id/v_bot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/v_top"
            android:background="@drawable/btn_signup_next_bot" >
        </View>

        <TextView
            android:id="@+id/tv_next"
            style="@style/friend_primary_m_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/friend_next" >
        </TextView>
    </RelativeLayout>

    <EditText
        android:id="@+id/friend_setup_user_name"
        style="@style/friend_primary_l_2_dark"
        android:layout_width="336px"
        android:layout_height="47px"
        android:layout_marginLeft="423px"
        android:layout_marginTop="127px"
        android:background="@drawable/edittext_bg"
        android:imeOptions="flagNoExtractUi"
        android:padding="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/friend_setup_create_name_warning_text"
        style="@style/friend_primary_m_2_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_setup_user_name"
        android:layout_marginLeft="423px"
        android:layout_marginTop="12dp"
        android:text="@string/friend_create_username_warning" />

</RelativeLayout>