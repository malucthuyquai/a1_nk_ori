<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_content_dialog_container"
    android:layout_width="@dimen/device_screen_width"
    android:layout_height="@dimen/device_screen_height"
    android:layout_centerInParent="true"
    android:orientation="horizontal">
    
	<ImageView
	    android:id="@+id/mail_content_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"/>
	
	
	<Button
	    android:id="@+id/mail_content_dialog_replay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mail_content_dialog_reply_button_margin_bottom"
        android:background="@drawable/mail_btn_reply"/>

	

</RelativeLayout>