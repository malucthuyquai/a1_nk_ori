<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_wallpaper_widget_background"
    android:layout_width="@dimen/mail_sticker_widget_width"
    android:layout_height="@dimen/mail_sticker_widget_height" >

    <View
        android:id="@+id/mail_wallpaper_top_image"
        android:layout_width="@dimen/mail_wallpaper_widget_image_width"
        android:layout_height="@dimen/mail_wallpaper_widget_image_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/mail_sticker_widget_image_margin_top"
        android:layout_centerHorizontal="true" />
    
    <ImageView
        android:id="@+id/mail_wallpaper_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/mail_sticker_divider_horizontal"
        />
    
    <ImageView
        android:id="@+id/mail_wallpaper_vertical_divider"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/mail_sticker_divider_vertical"
        />
    
    <View
        android:id="@+id/mail_wallpaper_bottom_image"
        android:layout_width="@dimen/mail_wallpaper_widget_image_width"
        android:layout_height="@dimen/mail_wallpaper_widget_image_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mail_sticker_widget_image_margin_top"
        android:layout_centerHorizontal="true" />

</RelativeLayout>