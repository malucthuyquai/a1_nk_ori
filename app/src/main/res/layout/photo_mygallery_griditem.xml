<?xml version="1.0" encoding="utf-8"?>
<com.fuhu.nabiconnect.photo.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ProgressBar
        android:id="@+id/MyGallery_GridItem_marker_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminate="true" />
       
    <ImageView
        android:id="@+id/MyGallery_GridPhotoItemView"
        android:layout_width="match_parent"	
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    
</com.fuhu.nabiconnect.photo.SquareLayout>