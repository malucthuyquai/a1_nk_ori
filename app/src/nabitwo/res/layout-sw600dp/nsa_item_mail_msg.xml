<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="-1dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty"
        android:scaleType="fitCenter"
        android:src="@drawable/nsa_chat_arrow_left" >
    </ImageView>

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/nsa_chat_bubble_left"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="32dp" >

        <FrameLayout
            android:layout_width="@dimen/nsa_mail_width"
            android:layout_height="@dimen/nsa_mail_height" >

            <ImageView
                android:id="@+id/iv_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/empty" >
            </ImageView>
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" >
        </View>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/nsa_chat_delete_dim"
            android:layout_height="@dimen/nsa_chat_delete_dim"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:contentDescription="@string/empty"
            android:scaleType="fitCenter"
            android:src="@drawable/nsa_btn_mail_x" >
        </ImageView>
    </LinearLayout>

</LinearLayout>